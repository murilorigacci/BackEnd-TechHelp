generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int       @id @default(autoincrement())
  nome        String
  email       String    @unique
  senha       String
  tipo        String    

  // Relações

  chamadosCriados  Chamados[] @relation("ChamadosCriados")
  chamadosResponsavel Chamados[] @relation("ChamadosResponsavel")

  @@map("usuarios")
} 

model Chamados {
  id           Int        @id @default(autoincrement())
  descricao    String
  status       String      
  prioridade   String     
  criadoEm     DateTime   @default(now())
  atualizadoEm DateTime   @updatedAt

  // Relacionamentos que criou e que é responsável pelo Chamado
  criadoPorId  Int?
  responsavelId Int?
  
  criadoPor    Usuario?  @relation("ChamadosCriados", fields: [criadoPorId], references: [id])
  responsavel    Usuario?  @relation("ChamadosResponsavel", fields: [responsavelId], references: [id])

  @@map("chamados")
}